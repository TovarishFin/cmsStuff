extends layout
block content
	h1 paid customers
	table
		tr
			th approve order
			th orderID
			th orderStatus
			th itemName
			th cFname
			th cLname
			th pMethod
			th itemPrice
			th ccNumber
			th ccExpDate
			th ccCode
			th BtoAddr
			th BtoCity
			th BtoState
			th BtoZip
			th BtoCountry
		tr
		for x in orders
			tr
			td
				form(method='post')
					input(type='hidden', name='orderID', value='#{x.orderID}')
					input(type='submit')
			td #{x.orderID}		
			td #{x.orderStatus}
			td #{x.itemName}
			td #{x.cFname}
			td #{x.cLname}
			td #{x.pMethod}
			td #{x.itemPrice}
			td #{x.ccNumber}
			td #{x.ccExpDate}
			td #{x.ccCode}
			td #{x.BtoAddr}
			td #{x.BtoCity}
			td #{x.BtoState}
			td #{x.BtoZip}
			td #{x.BtoCountry}
